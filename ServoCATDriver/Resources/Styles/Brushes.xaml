<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="DeviceValueColor" A="0xFF" R="192" G="4" B="4" />
    <Color x:Key="DeviceValueBackgroundColor" A="0xFF" R="64" G="0" B="0" />

    <SolidColorBrush x:Key="PrimaryInputBrush" Color="White" />
    <SolidColorBrush x:Key="PrimaryInputBackgroundBrush" Color="Black" />
    <SolidColorBrush x:Key="PrimaryBrush" Color="White" />
    <SolidColorBrush x:Key="DeviceValueBrush" Color="{StaticResource DeviceValueColor}" />
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="Black" />
    <SolidColorBrush x:Key="ValidationFailedBrush" Color="Red" />
    <SolidColorBrush x:Key="DeviceValueBackgroundBrush" Color="{StaticResource DeviceValueBackgroundColor}" />
</ResourceDictionary>